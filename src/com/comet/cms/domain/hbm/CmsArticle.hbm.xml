<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.comet.cms.domain">
    <class
            name="CmsArticle"
            table="CMS_ARTICLE"
            >

        <meta attribute="sync-DAO">false</meta>
        <meta attribute="sync-jsp">true</meta>
        <meta attribute="sync-boolean">get</meta>
        <meta attribute="treeable">false</meta>
        <meta attribute="projectable">false</meta>
        <meta attribute="tableName">公共信息发布</meta>
        <meta attribute="tableComment">公共信息发布</meta>
        <meta attribute="sync-templatePatterns">list\w*</meta>
        <meta attribute="sub-system">oa</meta>

        <id
                name="id"
                type="java.lang.Long"
                column="ID"
                >
            <generator class="com.comet.core.orm.hibernate.LongIdGenerator"/>
        </id>

        <property
                name="title"
                column="TITLE"
                type="string"
                not-null="false"
                length="200"
                >
            <meta attribute="ColumnName">标题</meta>
            <meta attribute="ColumnComment">标题</meta>
        </property>

        <property
                name="content"
                column="CONTENT"
                type="string"
                not-null="false"
                length="2000"
                >
            <meta attribute="ColumnName">内容</meta>
            <meta attribute="ColumnComment">内容</meta>
        </property>

        <property
                name="publishDate"
                column="PUBLISH_DATE"
                type="date"
                not-null="false"
                length="7"
                >
            <meta attribute="ColumnName">发布时间</meta>
            <meta attribute="ColumnComment">发布时间</meta>
        </property>

        <property
                name="visitTimes"
                column="VISIT_TIMES"
                type="long"
                not-null="false"
                length="7"
                >
            <meta attribute="ColumnName">访问次数</meta>
            <meta attribute="ColumnComment">访问次数</meta>
        </property>

        <property
                name="isValid"
                column="IS_VALID"
                type="java.lang.Boolean"
                not-null="false"
                length="1"
                >
            <meta attribute="ColumnName">是否有效</meta>
            <meta attribute="ColumnComment">是否有效</meta>
        </property>

        <property
                name="isTop"
                column="IS_TOP"
                type="java.lang.Boolean"
                not-null="false"
                length="1"
                >
            <meta attribute="ColumnName">是否置顶</meta>
            <meta attribute="ColumnComment">是否置顶</meta>
        </property>

        <property
                name="attachPath"
                column="ATTACH_PATH"
                type="string"
                not-null="false"
                length="500"
                >
            <meta attribute="ColumnName">图片/附件路径</meta>
            <meta attribute="ColumnComment">图片/附件路径</meta>
        </property>

        <property
                name="thumbPath"
                column="THUMB_PATH"
                type="string"
                not-null="false"
                length="500"
                >
            <meta attribute="ColumnName">缩略图路径</meta>
            <meta attribute="ColumnComment">缩略图路径</meta>
        </property>

        <property
                name="linkUrl"
                column="LINK_URL"
                type="string"
                not-null="false"
                length="500"
                >
            <meta attribute="ColumnName">缩略图路径</meta>
            <meta attribute="ColumnComment">缩略图路径</meta>
        </property>

        <property
                name="keyword"
                column="KEYWORD"
                type="string"
                not-null="false"
                length="100"
                >
            <meta attribute="ColumnName">关键字</meta>
            <meta attribute="ColumnComment">关键字</meta>
        </property>

        <property
                name="createTime"
                column="CREATE_TIME"
                type="timestamp"
                not-null="false"
                length="19"
                >
            <meta attribute="ColumnName">创建时间</meta>
            <meta attribute="ColumnComment">创建时间</meta>
        </property>

        <property
                name="updateTime"
                column="UPDATE_TIME"
                type="timestamp"
                not-null="false"
                length="19"
                >
            <meta attribute="ColumnName">更新时间</meta>
            <meta attribute="ColumnComment">更新时间</meta>
        </property>

        <property
                name="createUser"
                column="CREATE_USER"
                type="string"
                not-null="false"
                length="100"
                >
            <meta attribute="ColumnName">创建人</meta>
            <meta attribute="ColumnComment">创建人(记录帐号）</meta>
        </property>

        <property
                name="updateUser"
                column="UPDATE_USER"
                type="string"
                not-null="false"
                length="100"
                >
            <meta attribute="ColumnName">更新人</meta>
            <meta attribute="ColumnComment">更新人(记录帐号）</meta>
        </property>

        <many-to-one
                name="category"
                column="CATEGORY_ID"
                class="CmsCategory"
                not-null="false"
                >
        </many-to-one>

        <many-to-one
                name="accessRange"
                column="ACCESS_RANGE_ID"
                class="com.comet.system.domain.SysCodeDetail"
                not-null="false"
                >
        </many-to-one>

    </class>
    <query name="cmsarticle_all_data_query">
        <![CDATA[FROM CmsArticle ]]>
    </query>
</hibernate-mapping>